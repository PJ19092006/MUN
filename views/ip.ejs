<% layout("/layouts/boilerplate") -%>
<div class="form-container">
  <h2 class="text-center">IP REGISTRATION FORM</h2>
  <form id="munForm" action="/ip" method="post">
    <!-- Full Name -->
    <div class="row">
      <div class="mb-3 col-md-8">
        <label for="fullName" class="form-label">Full Name</label>
        <input
          type="text"
          class="form-control"
          id="fullName"
          name="data[fullName]"
          placeholder="Enter your full name"
          required
        />
      </div>

      <!-- Grade -->
      <div class="mb-3 col-md-4">
        <label class="form-label">Grade</label>
        <select class="form-select" id="grade" name="data[grade]" required>
          <option value="" disabled selected>Select your grade</option>
          <option value="6">6</option>
          <option value="7">7</option>
          <option value="8">8</option>
          <option value="9">9</option>
          <option value="10">10</option>
          <option value="11">11</option>
          <option value="12">12</option>
        </select>
      </div>
    </div>
    <div class="row">
      <!-- School Name -->
      <div class="mb-3 col-md-4">
        <label for="schoolName" class="form-label">Name of the School</label>
        <input
          type="text"
          class="form-control"
          id="schoolName"
          name="data[schoolName]"
          placeholder="Enter your school name"
          required
        />
      </div>

      <!-- Date of Birth -->
      <div class="mb-3 col-md-4">
        <label for="dob" class="form-label">Date of Birth</label>
        <input
          type="date"
          class="form-control"
          id="dob"
          name="data[dob]"
          required
        />
      </div>

      <!-- Contact Number -->
      <div class="mb-3 col-md-4">
        <label for="contactNumber" class="form-label">Contact Number</label>
        <input
          type="tel"
          class="form-control"
          id="contactNumber"
          name="data[contactNumber]"
          placeholder="Enter your contact number"
          required
        />
      </div>
    </div>

    <!-- Email Address -->
    <div class="mb-3">
      <label for="emailAddress" class="form-label">Email Address</label>
      <input
        type="email"
        class="form-control"
        id="emailAddress"
        name="data[emailAddress]"
        placeholder="Enter your email address"
        required
      />
    </div>

    <!-- Previous MUN Experience -->
    <div class="mb-3">
      <label for="munExperience" class="form-label"
        >Previous MUN Experience (Mention awards, if any)</label
      >
      <textarea
        class="form-control"
        id="munExperience"
        rows="3"
        name="data[munExperience]"
        placeholder="Describe your previous MUN experience"
        required
      ></textarea>
    </div>

    <!-- Select Your Role -->
    <div class="mb-3">
      <label for="role" class="form-label">Select Your Role(s) for IP</label>
      <select class="form-select" id="role" name="data[role]" required>
        <option value="" disabled selected>Select your role</option>
        <option value="videographer">Videographer</option>
        <option value="photographer">Photographer</option>
        <option value="characteristic">Characteristic</option>
        <option value="journalist">Journalist</option>
      </select>
    </div>

    <!-- Agree to Terms -->
    <div class="form-check mb-3">
      <input
        class="form-check-input"
        type="checkbox"
        id="agreeCheckbox"
        name="data[agreeCheckbox]"
        required
      />
      <label class="form-check-label" for="agreeCheckbox">
        I agree to the terms and conditions
      </label>
    </div>

    <!-- Submit Button -->
    <button type="submit" class="btn w-100 reg-btn">Submit</button>
  </form>
</div>
